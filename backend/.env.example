# Port d'écoute (Railway injecte automatiquement PORT)
PORT=3000

# Connexion PostgreSQL
# - En local : postgresql://user:password@localhost:5432/budgetapp
# - Sur Railway : Railway injecte automatiquement DATABASE_URL
DATABASE_URL=postgresql://user:password@localhost:5432/budgetapp

# Environnement (development | production)
NODE_ENV=development

# Clé secrète JWT (changez cette valeur !)
JWT_SECRET=changez-cette-cle-secrete-jwt-en-production

# Comptes créés par le seed
USER1_USERNAME=user1
USER1_PASSWORD=password123
USER1_NAME=Utilisateur 1

USER2_USERNAME=user2
USER2_PASSWORD=password123
USER2_NAME=Utilisateur 2
